<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="proveedor"
            type="com.ajo.abarrotesOsorio.data.model.Proveedor" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/proveedor_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/proveedor_image_description"
                android:src="@drawable/ic_provedor"
                tools:src="@drawable/ic_provedor" />

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/proveedor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{proveedor.nombre}"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    tools:text="Barcel"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/proveedor_contacto_vendedor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text='@{"Vendedor: " + (proveedor.nombreVendedor != null ? proveedor.nombreVendedor : "N/A")}'
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    tools:text="Vendedor: Juan Perez" />

                <TextView
                    android:id="@+id/proveedor_telefono_vendedor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text='@{"Teléfono: " + (proveedor.telefonoVendedor != null ? proveedor.telefonoVendedor : "N/A")}'
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    tools:text="Teléfono: 55-1234-5678" />

                <TextView
                    android:id="@+id/proveedor_dia_visita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text='@{"Día de visita: " + (proveedor.diaDeVisita != null ? proveedor.diaDeVisita : "N/A")}'
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    tools:text="Día de visita: Lunes, Miércoles, Viernes" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/edit_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/edit_proveedor_description"
                    android:src="@drawable/ic_edit"
                    tools:ignore="ContentDescription"
                    android:tint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/delete_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/delete_proveedor_description"
                    android:src="@drawable/ic_delete"
                    tools:ignore="ContentDescription"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>